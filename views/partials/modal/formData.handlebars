<div class="modal" id="formInfo" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
          <form class="col-11">
            <div class="form-group">
              <label for="document-type"><h5 class="modal-title"> Add a new </h5></label>
              <input type="text" class="form-control" id="newDocType" placeholder="Enter Document Type">
            </div>
          </form>

          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

      <div class="modal-body">
        <form id="docForms" action="/api/documents" method="POST" enctype="multipart/form-data">
          <div class="form-row">
            <div class="form-group col">
              <label for="name"> First Name </label>
              <input type="text" name = 'firstName' class="form-control" id="formFirstName" onclick="this.select()" value="{{user.firstName}}">
            </div>
            <div class="form-group col">
              <label for="name"> Last Name </label>
              <input type="text" name='lastName' class="form-control" id="formLastName" onclick="this.select()" value="{{user.lastName}}">
            </div>
          </div>

          <hr>

          {{!-- Add ID number --}}
          <div class="form-row">
            <div class="form-group col">
              <label for="documentID"> Document ID </label>
            </div>
            <div class="form-group col">
              <input type="text" name='docIdNumber' class="form-control" id="docIdNumber" placeholder="1234567890">
            </div>
          </div>

          {{!-- Expiration Date --}}
          <div class="form-row">
            <div class="form-group col">
              <label> Expiration Date </label>
            </div>
            <div class="form-group col">
              <input type="text" name='docExpiration' class="form-control" id="docExpiration" placeholder="yyyy-mm">
            </div>
          </div>


          {{!-- Add attachment --}}
          <div class="form-row">
            <div class="form-group col-md-6">
              Add Attachment
            </div>
            <div class="form-group col-md-5">
              <input type="file" name="filename" id="docPDF">
            </div>
          </div>

          <div id="extraInfo">
          </div>

          <br/>

          {{!-- Additional info --}}
          <div class="row justify-content-center">
            <button id="addInput" type="button" class="btn btn-success"> Add Additional Input </button>
          </div>

          <br/>

          <div class="modal-footer">
            <button id="submitForm" type="submit" class="btn btn-primary"> Add Document </button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal"> Close </button>
          </div>
      </div>
    </div>
  </div>
</div>
</div>